{
	"root": true,
	"env": {
		"es6": true,
		"node": true
	},
	"parserOptions": {
		"ecmaVersion": 2018,
		"sourceType": "module"
	},
	"extends": "eslint:recommended",
	"rules": {
		"indent": ["error", "tab"],
		"quotes": ["error", "single"],
		"semi": ["error", "always"],
		"eqeqeq": ["error", "always"],
		"camelcase": ["warn", { "properties": "always" }],
		"guard-for-in": ["warn"],
		"no-eval": ["warn"],
		"operator-assignment": ["warn"],
		"spaced-comment": ["warn"],
		"no-var": ["error"],
		"prefer-arrow-callback": ["error"],
		"prefer-const": ["warn"],
		"no-console": ["off"],
		"space-before-function-paren": ["error", {
			"anonymous": "never",
			"named": "never",
			"asyncArrow": "always"
		}]
	}
}
